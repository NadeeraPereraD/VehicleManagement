@model System.Data.DataTable;

@{
    ViewData["Title"] = "List of Vehicles";
}

<div class="jumbtron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                Vehicle Model
            </th>
            <th>
                No. of Seats
            </th>
            <th>
                Color
            </th>
            <th>
                <a asp-action="AddOrEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for(int i = 0; i < Model.Rows.Count; i++) {
        <tr>
            <td>
                @Model.Rows[i]["VehicleModel"]
            </td>
            <td>
                @Model.Rows[i]["Seat"]
            </td>
            <td>
                @Model.Rows[i]["Color"]
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["Id"]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["Id"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
